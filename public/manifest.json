{
  "manifest_version": 3,
  "name": "Researchr",
  "version": "1.0",
  "description": "Stop hitting paywalls! Researchr finds free, legal PDF copies of academic articles.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab", "tabs", "scripting"],
  "host_permissions": [
    "https://api.unpaywall.org/*"
  ]
}